{
  "name": "pe-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "ts-node-dev --respawn --transpile-only src/migrate.ts",
    "db:reset": "node -e \"console.log('Use psql to drop/create database and re-run migrations')\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
